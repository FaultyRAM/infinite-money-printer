{
  "productName": "infinite-money-printer",
  "identifier": "com.faultyram.infinite-money-printer",
  "build": {
    "frontendDist": [
      "../frontend",
      "../pkg"
    ]
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Infinite Money Printer",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-eval'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
